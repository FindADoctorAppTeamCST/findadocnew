<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bt.gov.jdwnrh.www.findadoctor.Dialler">

    <!-- Use String Reference to manage Strings on this activity. Make this edit when the actual contact numbers is used -->

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/callInst"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="23dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button3"
                android:text="Medical Superintendent"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:padding="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:onClick="btnCall"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button3"
                android:text="Emergency"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:padding="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:onClick="btnCall"/>

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button3"
                android:text="Health Information Service"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:padding="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:onClick="btnCall"/>

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button3"
                android:text="Adolescent Friendly Services"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:padding="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:onClick="btnCall"/>

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button3"
                android:text="Human Resource"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:padding="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:onClick="btnCall"/>

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button3"
                android:text="Administration"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:padding="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:onClick="btnCall"/>

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button3"
                android:text="ICT Unit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:padding="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:onClick="btnCall"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
